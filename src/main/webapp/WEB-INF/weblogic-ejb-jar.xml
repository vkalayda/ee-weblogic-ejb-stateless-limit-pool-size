<?xml version="1.0" encoding="UTF-8"?>

<weblogic-ejb-jar xmlns="http://www.oracle.com/technology/weblogic/weblogic-ejb-jar" xmlns:j2ee="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.oracle.com/technology/weblogic/weblogic-ejb-jar http://www.oracle.com/technology/weblogic/weblogic-ejb-jar/1.1/weblogic-ejb-jar.xsd">
    <weblogic-enterprise-bean>
        <ejb-name>BillingDelegateBean</ejb-name>
        <stateless-session-descriptor>
            <pool>
                <max-beans-in-free-pool>4</max-beans-in-free-pool>
                <initial-beans-in-free-pool>2</initial-beans-in-free-pool>
            </pool>
        </stateless-session-descriptor>
    </weblogic-enterprise-bean>
</weblogic-ejb-jar>
